<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_pintura">


    <include
        android:id="@+id/toolBarMenu"
        layout="@layout/tool_bar_activities"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:srcCompat="@drawable/recapitula_1"
        android:id="@+id/recap"
        android:layout_marginTop="20dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="55dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:background="@drawable/cuadro"
        android:id="@+id/rg"
        android:layout_height="230dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pregunta"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdbOne"
            android:textSize="18sp"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdbTwo"
            android:textSize="18sp"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdbThree"
            android:textSize="18sp"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdbFour"
            android:textSize="18sp"
            android:layout_weight="1" />

    </RadioGroup>


    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:gravity="bottom|right">
        <Button
            android:text="Finalizar"
            android:background="@drawable/boton_redondeado"
            android:layout_width="87dp"
            android:layout_height="39dp"
            android:id="@+id/finalizar"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="25dp"
            />

        <ImageButton
            android:layout_width="132dp"
            android:layout_height="80dp"
            android:scaleY="0.6"
            android:scaleX="0.6"
            app:srcCompat="@drawable/derecha"
            android:id="@+id/siguiente"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="25dp" />
    </RelativeLayout>

</LinearLayout>